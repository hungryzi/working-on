.row
  .grid_12
    %h2
      #{@project.title},
      - if @project.user == current_user
        = link_to 'edit', edit_project_path(@project)

.row
  .grid_6
    %h4= link_to @project.url, @project.url
    %p.intro= @project.description

  .grid_6

    %ul
      - @project.screenshots.each do |screenshot|
        %li[screenshot]
          = image_tag screenshot.image.thumb, class: 'img-left'
          %p= screenshot.description


